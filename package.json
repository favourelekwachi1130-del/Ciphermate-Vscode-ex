          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "ciphermate.intelligentScan",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "ciphermate.showResults",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "ciphermate.incrementalScan",
          "when": "workspaceFolderCount > 0"
        },
        {
